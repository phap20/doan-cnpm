@model doan.Models.LoaiPhong
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Sửa loại phòng</h2>
	</div>
	<form method="POST" asp-action="Sua">
		<input type="hidden" asp-for="ID">
		<div class="form-group">
            <label asp-for="TenLoaiPhong">Tên loại phòng</label>
            <input type="text" class="form-control" asp-for="TenLoaiPhong">
		</div>
		<button type="submit" class="btn btn-primary">Sửa</button>
	</form>
</main>

@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#Content");
    <partial name="_SummerNote" model="summerNote"/>
}